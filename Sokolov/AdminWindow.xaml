<Window x:Class="Sokolov.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sokolov"
        mc:Ignorable="d"
        Background="LightSeaGreen"
        SizeToContent="WidthAndHeight"
        Title="Администратор">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Margin="50" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Управление сотрудниками" Margin="0,0,0,10"/>
            <Button Content="Управление заказами" Margin="0,0,0,10"/>
            <Button Content="Управление сменами" Margin="0,0,0,10"/>
            <Button Style="{StaticResource BtnLogout}" Content="Выйти"/>
        </StackPanel>
    </Grid>
</Window>
